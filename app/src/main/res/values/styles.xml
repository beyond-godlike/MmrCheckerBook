<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:padding">5dp</item>
        <item name="android:width">60dp</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:editTextStyle">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.CardButton">
        <item name="android:background">@drawable/ic_action_name</item>
        <item name="android:minWidth">@android:dimen/app_icon_size</item>
    </style>

    <style name="AppTheme.AddButton">
        <item name="android:background">@drawable/ic_action_add</item>
        <item name="android:minWidth">@android:dimen/app_icon_size</item>
    </style>

    <style name="AppTheme.ImageButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTheme.RecyclerView">
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="AppTheme.CardView">
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:minHeight">150dp</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="AppTheme.TextViewDescription">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="AppTheme.TextViewData">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
    </style>


    <style name="AppTheme.Button">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bt</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

</resources>
